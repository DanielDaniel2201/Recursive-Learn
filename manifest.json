{
  "manifest_version": 3,
  "name": "Recursive-Learn",
  "version": "1.0.0",
  "description": "A Chrome extension that helps you learn systematically with AI by visualizing your learning journey as a tree structure.",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://raw.githubusercontent.com/*"
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*"
      ],
      "js": [
        "src/utils/domHelper.js",
        "src/utils/storage.js",
        "src/templates/prompts.js",
        "src/content/content.js"
      ],
      "css": ["src/content/content.css"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png"
    },
    "default_title": "Recursive-Learn"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
